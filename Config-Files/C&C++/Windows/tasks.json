//Task:shortcut to run a cpp file which will take input and show output of the programme automatically with programme runtime status such as memory comsume and execution time
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and run",
      "type": "shell",
      "command": "",
      "args": [
        "/c", // The '/c' allows CMD to execute the entire chain of commands
        "copy",
        "\"${file}\"",
        "${workspaceFolder}\\jspwTest.cpp",
        "&&",
        "g++",
        "${workspaceFolder}\\jspwTest.cpp",
        "-o",
        "${workspaceFolder}\\jspwTest",
        "&&",
        "${workspaceFolder}\\jspwTest",
        "<",
        "${workspaceFolder}\\input.txt",
        ">",
        "${workspaceFolder}\\output.txt",
        "&&",
        "del",
        "${workspaceFolder}\\jspwTest.exe",
        "&&",
        "del",
        "${workspaceFolder}\\jspwTest.cpp"
      ],
      "presentation": {
        "reveal": "silent"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
          "relative",
          "${workspaceRoot}"
        ],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
      "options": {
        "shell": {
          "executable": "cmd.exe" // Using CMD to run the tasks
        }
      }
    }
  ]
}