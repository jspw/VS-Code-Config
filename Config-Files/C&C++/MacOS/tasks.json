// Task : shortcut to run a cpp file which will take input and show output of the programme automatically with programme runtime status such as memory consume and execution time (MacBook)
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and run C program",
      "type": "shell",
      "command": "",
      "args": [
        "g++",
        "${relativeFile}",
        "-o",
        "${fileBasenameNoExtension}.out",
        "&&",
        "/usr/bin/time",
        "-lp",
        "./${fileBasenameNoExtension}.out",
        "<",
        "input.txt",
        ">",
        "output.txt",
        "&&",
        "rm",
        "${fileBasenameNoExtension}.out"
      ],
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
          "relative",
          "${workspaceRoot}"
        ],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ]
}